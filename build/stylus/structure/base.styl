html {
    color: #222;
    font-size: 1em;
    line-height: 1.4;
}

::-moz-selection {
    background: #b3d4fc;
    text-shadow: none;
}

::selection {
    background: #b3d4fc;
    text-shadow: none;
}

hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0;
    padding: 0;
}

audio,
canvas,
iframe,
img,
svg,
video {
    vertical-align: middle;
}

fieldset {
    border: 0;
    margin: 0;
    padding: 0;
}

textarea {
    resize: vertical;
}

.browserupgrade {
    margin: 0.2em 0;
    background: #CCC;
    color: #000;
    padding: 0.2em 0;
}


/* ==========================================================================
   Author's custom styles
   ========================================================================== */

*, 
:after, 
:before {
    box-sizing: border-box;
}


body {
    font-family: $font-family;
    text-rendering: optimizeLegibility;
}

.container {
    max-width: 1180px;
    position: relative; 
    margin-left: auto;
    margin-right: auto;
    padding-left: 5px;
    padding-right: 5px;
    @extend .clearfix;
}

.row {
    margin-left: -5px;
    margin-right: -5px;
    @extend .clearfix;
}

.column {
    float: left;
    padding: $gap;
}


/* HEADING TITLE */

.heading-block {
    width: 380px;
    float: left;
}

.heading {
    margin: 0;
    display: block;
    margin-bottom: 25px;
    line-height: 1.2;
    text-transform: uppercase;
    font-size: 36px;
    font-weight: 700;
    color: $color-contrast;

    .instagram & {
        position: relative;
        color: $color-highlighter;

        &:before {
            position: absolute;
            content: '#bmazafuriosa';
            padding: 5px 15px;
            bottom: -28px;
            background-color: $color-highlighter;
            text-transform: lowercase;
            font-size: 22px;
            color: $color-contrast;
        }
    }
}


/* INSTAGRAM */

.instagram {
    padding: 45px 0;
    background-color: $color-contrast;
}

.instagram-gallery {
    height: 320px;
}

.instagram-item {
    float: left;
    margin: 0 20px 20px 0;

    &:nth-child(5n) {
        margin-right: 0;
    }
}

.instagram-photo {
    padding: 0;
    margin: 0;
}