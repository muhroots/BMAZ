.post {
	
}

.post-item {
	margin-bottom: 35px;

	> a {
		display: block;
		transition: color $animation-time linear;
		text-decoration: none;
		font-weight: 700;
		font-size: 26px;
		color: $color-base;

		&:hover,
		&:focus {
			transition: color $animation-time linear;
			color: $color-base-hover;
		}
	}
}